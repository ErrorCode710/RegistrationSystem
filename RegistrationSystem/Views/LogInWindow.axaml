<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="RegistrationSystem.Views.LogInWindow"
        xmlns:sty="using:FluentAvalonia.Styling"
        xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        Height="500" Width="400"
        Title="LogInWindow"
		SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True">

	<!-- Border with rounded corners and background color -->
	<Grid>
		<TextBlock Text="Log In" FontSize="40"  TextAlignment="Center"></TextBlock>
			<Grid HorizontalAlignment="Center" VerticalAlignment="Center" RowDefinitions="*,*,*,*" Background="">
				
				<TextBox Grid.Row="0" Margin="0,5,0,10" Watermark="Enter Username" Foreground="{DynamicResource TextCLr}" Background="Transparent"/>
				<TextBox Grid.Row="1" Width="325" Margin="0,5,0,10" Watermark="Enter Password" Foreground="{DynamicResource TextCLr}" Background="Transparent"/>

				<Button  Grid.Row="2"  Content="Log In" Width="325" Height="40" Background="{DynamicResource AccClr}" Foreground="White" CornerRadius="5"/>
			</Grid>
		</Grid>
		
</Window>
